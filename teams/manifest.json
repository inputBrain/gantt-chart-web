{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.17/MicrosoftTeams.schema.json",
  "manifestVersion": "1.17",
  "version": "1.0.0",
  "id": "{{TEAMS_APP_ID}}",
  "developer": {
    "name": "Your Company Name",
    "websiteUrl": "https://{{YOUR_DOMAIN}}",
    "privacyUrl": "https://{{YOUR_DOMAIN}}/privacy",
    "termsOfUseUrl": "https://{{YOUR_DOMAIN}}/terms"
  },
  "name": {
    "short": "Planify",
    "full": "Planify - Project Planning & Kanban"
  },
  "description": {
    "short": "Plan projects with Gantt charts and Kanban boards",
    "full": "Planify is a powerful project planning tool that combines Gantt charts with Kanban boards. Create tasks, break them into subtasks, track progress, and collaborate with your team - all within Microsoft Teams."
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "accentColor": "#F0B90B",
  "staticTabs": [
    {
      "entityId": "planner",
      "name": "Plan",
      "contentUrl": "https://{{YOUR_DOMAIN}}/?inTeams=true",
      "websiteUrl": "https://{{YOUR_DOMAIN}}",
      "scopes": ["personal", "team"]
    },
    {
      "entityId": "boards",
      "name": "Boards",
      "contentUrl": "https://{{YOUR_DOMAIN}}/boards?inTeams=true",
      "websiteUrl": "https://{{YOUR_DOMAIN}}/boards",
      "scopes": ["personal", "team"]
    }
  ],
  "configurableTabs": [
    {
      "configurationUrl": "https://{{YOUR_DOMAIN}}/teams/config",
      "canUpdateConfiguration": true,
      "scopes": ["team", "groupChat"]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "{{YOUR_DOMAIN}}",
    "*.{{YOUR_DOMAIN}}"
  ],
  "webApplicationInfo": {
    "id": "{{AZURE_AD_CLIENT_ID}}",
    "resource": "api://{{YOUR_DOMAIN}}/{{AZURE_AD_CLIENT_ID}}"
  },
  "authorization": {
    "permissions": {
      "resourceSpecific": [
        {
          "name": "TeamSettings.Read.Group",
          "type": "Application"
        },
        {
          "name": "ChannelMessage.Read.Group",
          "type": "Application"
        }
      ]
    }
  },
  "showLoadingIndicator": true,
  "isFullScreen": false,
  "defaultBlockUntilAdminAction": false
}
